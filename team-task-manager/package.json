{
  "name": "projectflow---team-task-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write '**/*.{ts,tsx,md,json}'",
    "test": "vitest",
    "safe-dev": "npm run fresh-install && npm run dev",
    "clean:check": "node -p \"process.platform === 'linux' ? 'linux' : 'other'\"",
    "clean:linux": "rm -rf node_modules package-lock.json",
    "clean:other": "npx rimraf node_modules package-lock.json",
    "clean": "npm run clean:check | grep -q linux && npm run clean:linux || npm run clean:other",
    "fresh-install": "npm run clean && npm cache clean --force && npm install",
    "generate-docs": "node generate_structure.mjs"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "date-fns": "^4.1.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.6.0",
    "js-yaml": "^4.1.0",
    "mammoth": "^1.7.2",
    "marked": "^12.0.2",
    "react": "^19.1.1",
    "react-cookie-consent": "^9.0.0",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^7.7.1",
    "swiper": "^11.1.4",
    "uuid": "^11.1.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.2.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.46.2"
  }
}
